@typeparam TResetAction
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

@if (IsEnabled && !IsHidden)
{
    <MudAlert
        Class="@Class"
        Variant="Variant.Text"
        Severity="@Severity"
        ShowCloseIcon="true"
        CloseIconClicked="@Close"
        data-testid="@DataTestId">
        @ChildContent
    </MudAlert>
}
