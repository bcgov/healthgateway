@typeparam TErrorAction
@typeparam TSuccessAction
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<MudDialog>
    <DialogContent>
        <HgBannerFeedback
            Severity="@Severity.Error"
            IsEnabled="@HasError"
            TResetAction="@TErrorAction"
            DataTestId="audit-reason-feedback"
            Class="mb-4">
            @ErrorMessage
        </HgBannerFeedback>
        <MudTextField
            Label="Reason"
            @bind-Value="@AuditReason"
            T="@string"
            MaxLength="500"
            Required="true"
            Lines="@(4)"
            data-testid="audit-reason-input" />
    </DialogContent>
    <DialogActions>
        <HgButton
            RightMargin="Breakpoint.Always"
            HorizontalMarginSize="@(HgButton.DefaultHorizontalMarginSize - 2)"
            BottomMargin="Breakpoint.Always"
            Color="@Color.Primary"
            Variant="@Variant.Text"
            OnClick="@HandleClickCancel"
            data-testid="audit-cancel-button">
            Cancel
        </HgButton>
        <HgButton
            RightMargin="Breakpoint.Always"
            BottomMargin="Breakpoint.Always"
            Color="@Color.Primary"
            Loading="@IsLoading"
            Disabled="@SaveButtonDisabled"
            OnClick="@HandleClickConfirm"
            data-testid="audit-confirm-button">
            Confirm
        </HgButton>
    </DialogActions>
</MudDialog>
