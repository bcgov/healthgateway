@page "/login"
@layout LoginLayout

<PageTitle>HG Admin Login</PageTitle>

<MudHidden Breakpoint="Breakpoint.Xs">
    <MudText Typo="Typo.h4">Health Gateway Admin</MudText>
</MudHidden>
<MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
    <MudText Typo="Typo.h4">HG Admin</MudText>
</MudHidden>

<MudText Class="my-4">
    You must have explicit, authorized permission to access this system.
    Unauthorized attempts and actions to access or use this system may result in civil and/or criminal penalties.
    All activities performed on this system are logged and monitored.
</MudText>

<MudButton Variant="Variant.Filled" Color="Color.Primary" Link="@($"/authentication/login{(returnUrl!=null?$"?returnUrl={Uri.EscapeDataString(returnUrl)}":string.Empty)}")" Size="Size.Large" FullWidth="true" data-testid="sign-in-btn">Sign In</MudButton>

@code {
    [Parameter]
    [SupplyParameterFromQuery]
    public string? returnUrl { get; set; }
}


