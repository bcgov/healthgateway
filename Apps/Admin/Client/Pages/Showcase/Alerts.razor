@page "/showcase/alerts"
@layout MainLayout

<PageTitle>Alerts</PageTitle>
<article>
    <MudText Class="mt-4 mb-3" Typo="Typo.h4">Alerts</MudText>
    <MudGrid>
        <MudItem md="6" xs="12">
            @foreach ((Severity severity, string message) in Severities)
            {
                <MudAlert Variant="Variant.Text" Severity="@severity" ShowCloseIcon="true" Class="my-3">@message</MudAlert>
            }
        </MudItem>
    </MudGrid>
</article>
<article>
    <MudText Class="mt-4 mb-3" Typo="Typo.h4">Snackbar Alerts</MudText>
    <MudGrid>
        <MudItem md="4" xs="12">
            @foreach ((Severity severity, string _) in Severities)
            {
                <MudAlert Variant="Variant.Filled" Severity="@severity" Dense="true" NoIcon="true" Class="my-3">@severity</MudAlert>
            }
        </MudItem>
    </MudGrid>
</article>

@code
{
    public IList<(Severity severity, string message)> Severities { get; } = new List<(Severity severity, string message)>
    {
        (Severity.Normal,"The reactor type is RBMK-1000"),
        (Severity.Info,"The reactor was fired up successfully"),
        (Severity.Success,"The reactor is running at optimum temperature"),
        (Severity.Warning,"The reactor temperature exceeds the optimal range"),
        (Severity.Error,"Meltdown is imminent"),
    };
}
