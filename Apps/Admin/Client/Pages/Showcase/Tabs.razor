@page "/showcase/tabs"
@layout MainLayout

<PageTitle>Tabs</PageTitle>

<article>
    <MudText Class="mt-4 mb-3" Typo="Typo.h4">Normal</MudText>
    @foreach (Color colour in Colours)
    {
        <MudTabs Class="my-4" Elevation="4" Color="@colour" ApplyEffectsToContainer="true" PanelClass="pa-6">
            <MudTabPanel Text="Tab One">
                <MudText>Content One</MudText>
            </MudTabPanel>
            <MudTabPanel Text="Tab Two">
                <MudText>Content Two</MudText>
            </MudTabPanel>
            <MudTabPanel Text="Tab Three">
                <MudText>Content Three</MudText>
            </MudTabPanel>
            <MudTabPanel Text="Tab Disabled" Disabled="true">
                <MudText>Content Disabled</MudText>
            </MudTabPanel>
        </MudTabs>
    }
</article>
