            "Override": {
                "Microsoft.AspNetCore": "Warning",
                "Microsoft.EntityFrameworkCore.Database": "Warning",
                "System.Net.Http.HttpClient": "Warning"
            }
        }
    },
    "RequestLogging": {
        "ExcludedPaths": [
            "/_framework/*",
            "/lib/*",
            "/health",
            "/content/*",
            "/js/*"
