{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "System": "Warning",
            "Microsoft": "Warning"
        },
        "SensitiveDataLogging": {
            "Enabled": false
        },
        "Console": {
            "FormatterName": "simple",
            "FormatterOptions": {
                "SingleLine": true,
                "IncludeScopes": true,
                "TimestampFormat": "yyyy/MM/dd HH:mm:ss ",
                "UseUtcTimestamp": false
            }
        }
    },
    "OpenIdConnect": {
        "Authority": "https://loginproxy.gov.bc.ca/auth/realms/health-gateway-gold",
        "ClientId": "hg-admin",
        "Audience": "hg-admin",
        "SaveTokens": "true",
        "GetClaimsFromUserInfoEndpoint": "true",
        "SignedOutRedirectUri": "/signoff",
        "ResponseType": "code",
        "Scope": "openid profile email",
        "Callbacks": {
            "Logon": "https://admin.healthgateway.gov.bc.ca/",
            "Logout": "https://admin.healthgateway.gov.bc.ca/authentication/login"
        }
    },
    "SwaggerSettings": {
        "RoutePrefix": "swagger",
        "Info": {
            "Title": "Health Gateway Admin WebClient Services documentation",
            "Description": "Provides API documentation for Health Gateway Admin WebClient Services.",
            "License": {
                "Name": "Apache 2.0",
                "Url": "https://www.apache.org/licenses/LICENSE-2.0.html"
            }
        }
    },
    "TimeZone": {
        "UnixTimeZoneId": "America/Vancouver",
        "WindowsTimeZoneId": "Pacific Standard Time"
    },
    "KeyCloak": {
        "IDPHintKey": "kc_idp_hint",
        "IDPHint": ""
    },
    "ForwardProxies": {
        "Enabled": true,
        "KnownProxies": []
    },
    "AllowOrigins": "*",
    "AllowedHosts": "*",
    "ContentSecurityPolicy": {
        "Base": "'self'",
        "DefaultSource": "'self'",
        "ScriptSource": "'self' 'wasm-eval' 'unsafe-eval' 'unsafe-inline'",
        "ConnectSource": "'self' file: data: blob: filesystem: https://spt.apps.gov.bc.ca/com.snowplowanalytics.snowplow/tp2 https://loginproxy.gov.bc.ca/",
        "ImageSource": "'self' data:",
        "StyleSource": "'self' 'unsafe-inline' https://fonts.googleapis.com/ https://cdn.jsdelivr.net/ https://use.fontawesome.com/",
        "FormAction": "'self'",
        "FontSource": "'self' https://fonts.gstatic.com/ https://use.fontawesome.com/",
        "FrameSource": "'self' https://loginproxy.gov.bc.ca/",
        "FrameAncestors": "'self' https://loginproxy.gov.bc.ca/"
    },
    "PatientService": {
        "ClientRegistry": {
            "ServiceUrl": "https://hcim.ehealth.gov.bc.ca/HCIM.HIALServices.Portal/QUPA_AR101102.asmx",
            "ClientCertificate": {
                "Path": "/usr/local/HealthGateway/HGWAY_HP1.pfx"
            }
        },
        "CacheTTL": 90
    },
    "KeycloakAdmin": {
        "TokenUri": "https://loginproxy.gov.bc.ca/auth/realms/health-gateway-gold/protocol/openid-connect/token",
        "ClientId": "hg-keycloak",
        "ClientSecret": "****",
        "BaseUrl": "https://loginproxy.gov.bc.ca/auth/admin/realms/health-gateway-gold"
    },
    "Features": {
        "Showcase": false,
        "UserInfo": true
    },
    "ServiceEndpoints": {
        "JobScheduler": "https://www.healthgateway.gov.bc.ca/admin/jobscheduler"
    },
    "PhsaV2Admin": {
        "TokenBaseUrl": "https://phsa-ccd.azure.net/identity",
        "BaseUrl": "https://phsa-ccd.azure.net/healthgatewayadmin",
        "ClientId": "****",
        "ClientSecret": "****",
        "GrantType": "urn:ietf:params:oauth:grant-type:token-exchange",
        "Scope": "admin_profile systemalert.write",
        "TokenCacheEnabled": true
    }
}
