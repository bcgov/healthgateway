{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft.AspNetCore": "Warning",
                "Microsoft.EntityFrameworkCore.Database": "Warning",
                "System.Net.Http.HttpClient": "Warning"
            }
        }
    },
    "RequestLogging": {
        "ExcludedPaths": [
            "/health"
        ]
    },
    "OpenIdConnect": {
        "Authority": "https://loginproxy.gov.bc.ca/auth/realms/health-gateway-gold",
        "ClientId": "hg",
        "Audience": "hg"
    },
    "ForwardProxies": {
        "Enabled": "true",
        "BasePath": "/api/medicationservice",
        "KnownProxies": []
    },
    "AllowOrigins": "*",
    "SwaggerSettings": {
        "RoutePrefix": "api/medicationservice/swagger",
        "Info": {
            "Title": "Health Gateway Medication Services documentation",
            "Description": "Provides API documentation for Health Gateway Medication Service.",
            "License": {
                "Name": "Apache 2.0",
                "Url": "https://www.apache.org/licenses/LICENSE-2.0.html"
            }
        }
    },
    "ODR": {
        "ServiceName": "ODRPROXY_SERVICE",
        "ServiceHostSuffix": "_HOST",
        "ServicePortSuffix": "_PORT",
        "DynamicServiceLookup": "true",
        "BaseEndpoint": "http://${serviceHost}:${servicePort}/",
        "CacheTTL": 1440,
        "ClientCertificate": {
            "Enabled": false,
            "Path": "****",
            "Password": "****"
        },
        "Authorization": {
            "Enabled": false,
            "Credentials": "****"
        }
    },
    "PatientService": {
        "ClientRegistry": {
            "ServiceUrl": "https://hcim.ehealth.gov.bc.ca/HCIM.HIALServices.Portal/QUPA_AR101102.asmx",
            "ClientCertificate": {
                "Path": "/usr/local/HealthGateway/HGWAY_HP1.pfx"
            }
        },
        "CacheTTL": 90
    },
    "Salesforce": {
        "Endpoint": "ENDPOINT",
        "TokenUri": "TOKEN_URI",
        "ClientAuthentication": {
            "ClientId": "CLIENT_ID",
            "ClientSecret": "****",
            "Username": "****",
            "Password": "****"
        }
    },
    "OpenTelemetry": {
        "Enabled": false,
        "Sources": [
            "RestMedicationStatementService",
            "PatientService",
            "ClientRegistriesDelegate",
            "MedicationRequestService",
            "DbAuditLogger",
            "RedisAuditLogger"
        ],
        "ServiceName": "MedicationService",
        "ConsoleEnabled": false,
        "ZipkinEnabled": false,
        "ZipkinUri": "",
        "IgnorePathPrefixes": [
            "/health"
        ]
    },
    "AuthCache": {
        "TokenCacheExpireMinutes": "20"
    },
    "PhsaV2": {
        "TokenBaseUrl": "https://phsa-ccd.azure-api.net/identity",
        "BaseUrl": "https://phsa-ccd.azure-api.net/healthgateway",
        "ClientId": "****",
        "ClientSecret": "****",
        "GrantType": "urn:ietf:params:oauth:grant-type:token-exchange",
        "Scope": "healthdata.read webalert.read patient_profile account.read",
        "TokenCacheEnabled": true
    }
}
