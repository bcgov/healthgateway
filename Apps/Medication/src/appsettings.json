{
    "Logging": {
        "LogLevel": {
            "HealthGateway.Common.Instrumentation": "Warning",
            "Default": "Information",
            "System": "Information",
            "Microsoft": "Information"
        }
    },
    "ForwardProxies": {
        "Enabled": "true",
        "BasePath": "/api/medicationservice",
        "KnownProxies": []
    },
    "OpenIdConnect": {
        "Authority": "https://*",
        "Audience": "healthgateway"
    },
    "SwaggerSettings": {
        "RoutePrefix": "swagger",
        "Info": {
            "Title": "Health Gateway Medication Services documentation",
            "Description": "Provides API documentation for Health Gateway Medication Service.",
            "License": {
                "Name": "Apache 2.0",
                "Url": "https://www.apache.org/licenses/LICENSE-2.0.html"
            }
        }
    },
    "ODR": {
        "ServiceName": "ODRPROXY_SERVICE",
        "ServiceHostSuffix": "_HOST",
        "ServicePortSuffix": "_PORT",
        "DynamicServiceLookup": "true",
        "BaseEndpoint": "http://${serviceHost}:${servicePort}/",
        "PatientProfileEndpoint": "odr/patientProfile",
        "ProtectiveWordEndpoint": "odr/maintainProtectiveWord",
        "CacheTTL": 1440
    },
    "PatientService": {
        "ClientRegistry": {
            "ServiceUrl": "https://wembley.hlth.gov.bc.ca/HI3/HCIM.HIALServices.Portal/QUPA_AR101102.asmx",
            "ClientCertificate": {
                "Path": "/usr/local/HealthGateway/HGWAY_HI1.pfx"
            }
        },
        "CacheTTL": 90
    },
    "OpenTelemetry": {
        "Enabled": false,
        "Sources": [ "RestMedicationStatementService", "PatientService", "ClientRegistriesDelegate" ],
        "ServiceName": "MedicationService",
        "ConsoleEnabled": false,
        "ZipkinEnabled": false,
        "ZipkinUri": ""
    }
}
