{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Information"
        }
    },
    "AllowedHosts": "*",
    "OpenIdConnect": {
        "Audience": "gateway",
        "SaveTokens": "true",
        "GetClaimsFromUserInfoEndpoint": "true",
        "SignedOutRedirectUri": "/logout",
        "ResponseType": "code",
        "Scope": [ "openid", "profile", "email", "offline_access" ],
        "RequireHttpsMetadata": "false"
    },
    "AllowOrigins": "*"
}
