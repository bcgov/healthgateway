{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft.AspNetCore": "Warning",
                "Microsoft.EntityFrameworkCore.Database": "Warning",
                "System.Net.Http.HttpClient": "Warning"
            }
        }
    },
    "RequestLogging": {
        "ExcludedPaths": [
            "/js/*"
        ]
    },
    "OpenIdConnect": {
        "Authority": "https://loginproxy.gov.bc.ca/auth/realms/health-gateway-gold",
        "ClientId": "hg",
        "Audience": "hg",
        "ResponseType": "code",
        "Scope": "openid profile web-origins email",
        "Callbacks": {
            "Logon": "https://www.healthgateway.gov.bc.ca/loginCallback",
            "Logout": "https://www.healthgateway.gov.bc.ca/logoutComplete"
        }
    },
    "ForwardProxies": {
        "Enabled": true,
        "KnownProxies": []
    },
    "AllowOrigins": "*",
    "SwaggerSettings": {
        "RoutePrefix": "swagger",
        "Info": {
            "Title": "Health Gateway WebClient Services documentation",
            "Description": "Provides API documentation for Health Gateway WebClient Services.",
            "License": {
                "Name": "Apache 2.0",
                "Url": "https://www.apache.org/licenses/LICENSE-2.0.html"
            }
        }
    },
    "IdentityProviders": [
        {
            "id": "BCSC",
            "Name": "BC Services Card",
            "Icon": "address-card",
            "Hint": "bcsc",
            "disabled": false
        }
    ],
    "WebClient": {
        "RedirectToWWW": true,
        "LogLevel": "Info",
        "TimeOuts": {
            "Idle": "900000",
            "LogoutRedirect": "20000",
            "ResendSMS": "1"
        },
        "ExternalURLs": {
            "HealthLinkImmunizationSchedule": "https://www.healthlinkbc.ca/tools-videos/bc-immunization-schedules",
            "HealthLinkVaccineSearch": "https://www.healthlinkbc.ca/search/"
        },
        "Modules": {
            "Immunization": true,
            "Medication": true,
            "Laboratory": true,
            "Encounter": true,
            "Note": true,
            "Comment": true,
            "CovidLabResults": true,
            "Dependent": true,
            "MedicationRequest": true,
            "VaccinationStatus": true,
            "VaccinationStatusPdf": true,
            "VaccinationExportPdf": true,
            "PublicVaccineDownloadPdf": true,
            "FederalCardButton": true,
            "PublicLaboratoryResult": true,
            "PcrTest": false,
            "DependentImmunizationTab": false,
            "DependentClinicalDocumentTab": false,
            "DependentLaboratoryOrderTab": false,
            "AllLaboratory": false,
            "ClinicalDocument": false,
            "HospitalVisit": false,
            "NotificationCentre": false,
            "Ticket": false
        },
        "HoursForDeletion": 720,
        "MinPatientAge": 12,
        "MaxDependentAge": 12,
        "EmailVerificationExpirySeconds": 43200,
        "UserProfileHistoryRecordLimit": 4
    },
    "ServiceEndpoints": {
        "ClinicalDocument": "https://hg-prod.api.gov.bc.ca/api/clinicaldocumentservice/",
        "GatewayApi": "https://hg-prod.api.gov.bc.ca/api/gatewayapiservice/",
        "Immunization": "https://hg-prod.api.gov.bc.ca/api/immunizationservice/",
        "Patient": "https://hg-prod.api.gov.bc.ca/api/patientservice/",
        "PatientData": "https://hg-prod.api.gov.bc.ca/api/patientservice/",
        "Medication": "https://hg-prod.api.gov.bc.ca/api/medicationservice/",
        "SpecialAuthority": "https://hg-prod.api.gov.bc.ca/api/medicationservice/",
        "Laboratory": "https://hg-prod.api.gov.bc.ca/api/laboratoryservice/",
        "Encounter": "https://hg-prod.api.gov.bc.ca/api/encounterservice/",
        "HospitalVisit": "https://hg-prod.api.gov.bc.ca/api/encounterservice/",
        "Ticket": "https://tickets.healthgateway.gov.bc.ca/"
    },
    "AvailabilityFilter": {
        "DumpHeaders": false,
        "DumpHeaders.Index": false
    },
    "ContentSecurityPolicy": {
        "Base": "'self'",
        "DefaultSource": "'self'",
        "ScriptSource": "'self' 'unsafe-eval' 'sha256-Tui7QoFlnLXkJCSl1/JvEZdIXTmBttnWNxzJpXomQjg=' 'sha256-vY0Cwh5hLv8sUQ61m3KQgfrqeAmcY7t6wJ2FAdYPNyU=' https://www2.gov.bc.ca/StaticWebResources/static/sp/sp-2-14-0.js",
        "ConnectSource": "'self' file: data: blob: filesystem: https://spt.apps.gov.bc.ca/com.snowplowanalytics.snowplow/tp2 https://loginproxy.gov.bc.ca/ https://hg-prod.api.gov.bc.ca/ https://tickets.healthgateway.gov.bc.ca/",
        "ImageSource": "'self' data:",
        "StyleSource": "'self' 'unsafe-inline' https://fonts.googleapis.com/ https://cdn.jsdelivr.net/ https://use.fontawesome.com/",
        "FormAction": "'self'",
        "FontSource": "'self' https://fonts.gstatic.com/ https://cdn.jsdelivr.net/ https://use.fontawesome.com/",
        "FrameSource": "'self' https://loginproxy.gov.bc.ca/",
        "FrameAncestors": "'self' https://loginproxy.gov.bc.ca/"
    },
    "PermissionPolicy": "camera=(self)",
    "OpenTelemetry": {
        "Enabled": false,
        "Sources": [
            "PatientService",
            "ClientRegistriesDelegate",
            "DbAuditLogger",
            "RedisAuditLogger"
        ],
        "ServiceName": "WebClient",
        "ConsoleEnabled": false,
        "ZipkinEnabled": false,
        "ZipkinUri": "",
        "IgnorePathPrefixes": [
            "/health",
            "/sock",
            "/js",
            "/img",
            "/fonts",
            "/manifest.json"
        ]
    },
    "MobileConfiguration": {
        "Online": true,
        "BaseUrl": "https://hg-prod.api.gov.bc.ca/",
        "Authentication": {
            "Endpoint": "https://loginproxy.gov.bc.ca/auth/realms/health-gateway-gold",
            "IdentityProviderId": "bcsc-mobile",
            "ClientId": "hg-mobile",
            "RedirectUri": "myhealthbc://*"
        },
        "Version": 2
    }
}
