  - name: $SERVICE-$KONG_NAMESPACE
    url: http://$SERVICE.$LICENCE_PLATE-$ENVIRONMENT.svc:8080
    tags:
      - OAS3_import
      - ns.$KONG_NAMESPACE
    plugins:
      - name: cors
        tags: [ns.$KONG_NAMESPACE]
        enabled: true
        config:
          preflight_continue: true
        protocols:
          - http
          - https
    routes:
      - name: $SERVICE-$KONG_NAMESPACE-get-post-put-delete
        methods:
          - GET
          - POST
          - PUT
          - DELETE
        hosts:
          - $KONG_NAMESPACE.api.gov.bc.ca
        paths:
          - $BASE_PATH
        strip_path: false
        plugins:
          - name: jwt-keycloak
            tags: [ns.$KONG_NAMESPACE]
            enabled: true
            config:
              client_roles: null
              allowed_iss:
                - $KEYCLOAK_URI
              run_on_preflight: true
              iss_key_grace_period: 10
              maximum_expiration: 0
              claims_to_verify:
                - exp
              consumer_match_claim_custom_id: false
              cookie_names: []
              scope: null
              uri_param_names:
                - jwt
              roles: null
              consumer_match: true
              well_known_template: $KEYCLOAK_URI/.well-known/openid-configuration
              consumer_match_ignore_not_found: true
              anonymous: null
              algorithm: RS256
              realm_roles: null
              consumer_match_claim: azp
          - name: rate-limiting
            tags: [ns.$KONG_NAMESPACE]
            enabled: true
            config:
              fault_tolerant: true
              hide_client_headers: false
              limit_by: credential
              minute: $USER_RATE_LIMIT
            protocols:
              - http
              - https
          - name: rate-limiting_902
            tags: [ns.$KONG_NAMESPACE]
            enabled: true
            config:
              fault_tolerant: true
              hide_client_headers: false
              limit_by: service
              minute: $GLOBAL_RATE_LIMIT
            protocols:
              - http
              - https
        tags:
          - OAS3_import
          - ns.$KONG_NAMESPACE
      - name: $SERVICE-$KONG_NAMESPACE-options
        methods:
          - OPTIONS
        hosts:
          - $KONG_NAMESPACE.api.gov.bc.ca
        paths:
          - $BASE_PATH
        strip_path: false
        tags:
          - OAS3_import
          - ns.$KONG_NAMESPACE
      - name: $SERVICE-$KONG_NAMESPACE-swagger
        methods:
          - GET
        hosts:
          - $KONG_NAMESPACE.api.gov.bc.ca
        paths:
          - $BASE_PATH/swagger
        strip_path: false
        plugins:
          - name: rate-limiting_902
            tags: [ns.$KONG_NAMESPACE]
            enabled: true
            config:
              fault_tolerant: true
              hide_client_headers: false
              limit_by: service
              minute: $GLOBAL_RATE_LIMIT
            protocols:
              - http
              - https
        tags:
          - OAS3_import
          - ns.$KONG_NAMESPACE
