{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "types": [
      "reflect-metadata",
      "webpack-env",
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "es2018.promise"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
  ],
  "exclude": [
    "node_modules"
  ]
}